<Window x:Class="variableclient.ConnectBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server address" Height="110" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Background="{StaticResource WindowBackgroundBrush}">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button Content="Connect" Height="23" HorizontalAlignment="Stretch" Margin="10,10,10,10" Name="btnConnect" VerticalAlignment="Bottom" IsDefault="True" Click="btnConnect_Click" />
        <TextBox Height="23" HorizontalAlignment="Stretch" Margin="10,10,10,10" Name="tbAddress" VerticalAlignment="Top" />
    </Grid>
</Window>
